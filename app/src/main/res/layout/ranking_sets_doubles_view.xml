<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NAME_P1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/namePlayer1_sets"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" / "
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/slice"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/namePlayer1_sets"
        android:layout_toEndOf="@+id/namePlayer1_sets" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NAME_P2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/namePlayer2_sets"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/slice"
        android:layout_toEndOf="@+id/slice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SETS"
        android:id="@+id/ranking_sets"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/namePlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>